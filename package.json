{
  "name": "node-traffic-controller",
  "version": "0.0.0",
  "description": "A Node bot for the video game Auto Traffic Control",
  "private": true,
  "main": "src/main.ts",
  "scripts": {
    "lint": "npx eslint . --ext .ts",
    "prepare": "husky install",
    "start": "npx ts-node src/main.ts"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.md": "markdownlint **/*.md --ignore node_modules",
    "**/*.ts": "eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdno/node-traffic-controller.git"
  },
  "keywords": [
    "game",
    "bot"
  ],
  "author": "Jan David",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jdno/node-traffic-controller/issues"
  },
  "homepage": "https://github.com/jdno/node-traffic-controller#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.8",
    "markdownlint-cli": "0.31.1",
    "prettier": "2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "auto-traffic-control": "file:../auto-traffic-control/sdk/node"
  }
}
